<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.carlosjunior.mypong.ResultActivity"
    android:background="@android:color/darker_gray">


            <TextView android:text="Carlos Roberto" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/txt_player_name"
                android:gravity="center" />

            <TextView android:text="VocÃª fez 54 pontos" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:id="@+id/txt_final_score"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <Button
                android:id="@+id/btnReplay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Jogar novamente"
                android:layout_marginTop="40dp"
                android:onClick="replayGame"/>
                />
            <Button
                android:id="@+id/btnPostOnFacebook"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Publicar no Facebook"
                android:onClick="postOnFacebook"/>
                />
    <Button
        android:id="@+id/btnFinish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:onClick="finish"/>
    />

</LinearLayout>
