<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.carlosjunior.mypong.ResultActivity"
    android:background="@android:color/darker_gray">


            <TextView android:text="" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/txt_player_name"
                android:gravity="center" />

            <TextView android:text="" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:id="@+id/txt_final_score"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <Button
                android:id="@+id/btnReplay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/msg_replay"
                android:layout_marginTop="40dp"
                android:onClick="replayGame"/>
                />
            <Button
                android:id="@+id/btnPostOnFacebook"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_publish"
                android:onClick="postOnFacebook"/>
                />

</LinearLayout>
